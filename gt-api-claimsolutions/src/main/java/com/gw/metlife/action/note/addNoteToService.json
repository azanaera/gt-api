{
  "requiredTemplateParameters" : ["serviceRequestId", "topic", "body"],
  "data": {
    "attributes": {
      "body": "#(args.body)",
      "confidential": false,
      "relatedTo": {
        "id": "#(args.serviceRequestId)",
        "type": "ServiceRequest"
      },
      "securityType": {
        "code": "public"
      },
      "subject": "#(args.topic)",
      "topic": {
        "code": "#(args.topic)"
      }
    }
  }
}